#include <stdio.h>

int main() {
    int num1, num2, sum;

    while(1) {
        printf("ingrese primer número: ");
        scanf("%d", &num1);
        printf("ingrese segundo número ");
        scanf("%d", &num2);

        if (num1 == 99 && num2 == 0) {
            printf("programa finalizado\n");
            break;
        }

        sum = num1 + num2;
        printf("Sum: %d\n", sum);

        if (num1 == 0) {
            break;
        }
    }

    return 0;
}
